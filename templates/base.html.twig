<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin Moderne{% endblock %}</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Bootstrap Icons (optionnel, stylé !) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        body {
            background-color: #f6f7fb;
        }
        .sidebar {
            width: 220px;
            position: fixed;
            top: 0; left: 0; bottom: 0;
            background-color: #212529;
            padding: 2rem 1rem;
        }
        .sidebar a {
            color: #bbb;
            font-weight: 500;
            text-decoration: none;
            margin-bottom: 12px;
            display: block;
            border-radius: 6px;
            padding: 8px 10px;
            transition: .2s;
        }
        .sidebar a:hover, .sidebar a.active {
            background: #343a40;
            color: #fff;
        }
        .content {
            margin-left: 230px;
        }
        @media (max-width:900px) {
            .sidebar { position: static; width: 100%; padding: .5rem; }
            .content { margin-left:0; }
        }
    </style>
</head>
<body>
    <div class="sidebar d-flex flex-column align-items-start vh-100">
        <h3 class="text-white mb-4"><i class="bi bi-shop"></i> Admin Panel</h3>
        <a href="{{ path('dashboard_index') }}" class="{% if app.request.attributes.get('_route') == 'dashboard_index' %}active{% endif %}"><i class="bi bi-house"></i> Dashboard</a>
        <a href="{{ path('produit_index') }}" class="{% if app.request.attributes.get('_route') starts with 'produit' %}active{% endif %}"><i class="bi bi-box-seam"></i> Produits</a>
        <a href="{{ path('categorie_index') }}" class="{% if app.request.attributes.get('_route') starts with 'categorie' %}active{% endif %}"><i class="bi bi-collection"></i> Catégories</a>
        <a href="{{ path('commande_index') }}" class="{% if app.request.attributes.get('_route') starts with 'commande' %}active{% endif %}"><i class="bi bi-card-list"></i> Commandes</a>
        <a href="{{ path('utilisateur_index') }}" class="{% if app.request.attributes.get('_route') starts with 'utilisateur' %}active{% endif %}"><i class="bi bi-people"></i> Utilisateurs</a>
        <!-- Ajoute d'autres liens ici si besoin -->
        <hr class="text-secondary w-100">
        <a href="#" class=""><i class="bi bi-box-arrow-right"></i> Déconnexion</a>
    </div>
    <div class="content p-4">
        {% block body %}{% endblock %}
    </div>
    <!-- Bootstrap 5 JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
