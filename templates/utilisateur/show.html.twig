{% extends 'base.html.twig' %}

{% block title %}Détails Utilisateur #{{ utilisateur.id }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow my-4">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">
                    <i class="bi bi-person"></i>
                    Détails Utilisateur
                </h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Nom</label>
                    <input type="text" value="{{ utilisateur.nom }}" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" value="{{ utilisateur.email }}" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Rôle</label>
                    <input type="text" value="{{ utilisateur.role }}" class="form-control-plaintext" readonly>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="actif" {{ utilisateur.actif ? 'checked' : '' }} disabled>
                        <label class="form-check-label" for="actif">
                            Actif
                        </label>
                    </div>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a class="btn btn-outline-secondary" href="{{ path('app_utilisateur_index') }}">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
