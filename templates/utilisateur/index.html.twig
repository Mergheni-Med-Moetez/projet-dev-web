{% extends 'base.html.twig' %}

{% block title %}Gestion des Utilisateurs{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-people"></i> Utilisateurs</h2>
    <a href="{{ path('app_utilisateur_new') }}" class="btn btn-primary">
        <i class="bi bi-person-plus"></i> Nouvel utilisateur
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Rôle</th>
            <th>Actif</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for utilisateur in utilisateurs %}
        <tr>
            <td>{{ utilisateur.id }}</td>
            <td>{{ utilisateur.nom }}</td>
            <td>{{ utilisateur.email }}</td>
            <td>{{ utilisateur.role }}</td>
            <td>
                {% if utilisateur.actif %}
                    <span class="badge bg-success">Oui</span>
                {% else %}
                    <span class="badge bg-danger">Non</span>
                {% endif %}
            </td>
            <td>
                <a href="{{ path('app_utilisateur_show', {'id': utilisateur.id}) }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-pencil"></i>
                </a>
                {{ include('utilisateur/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center">Aucun utilisateur trouvé.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
