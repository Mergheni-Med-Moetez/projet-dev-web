{% extends 'base.html.twig' %}

{% block title %}Gestion des Catégories{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-collection"></i> Catégories</h2>
    <a href="{{ path('app_categorie_new') }}" class="btn btn-primary"><i class="bi bi-plus"></i> Nouvelle catégorie</a>
</div>
<table class="table table-hover shadow">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Description</th>
            <th style="width:150px">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for categorie in categories %}
        <tr>
            <td>{{ categorie.id }}</td>
            <td>{{ categorie.nom }}</td>
            <td>{{ categorie.description }}</td>
            <td>
                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" class="btn btn-outline-secondary btn-sm"><i class="bi bi-eye"></i></a>
                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" class="btn btn-outline-success btn-sm"><i class="bi bi-pencil"></i></a>
                {# Ajoute un bouton de suppression si besoin, sinon via le twig par défaut #}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="4" class="text-center">Aucune catégorie trouvée.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
