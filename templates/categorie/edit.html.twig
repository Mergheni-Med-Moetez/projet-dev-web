{% extends 'base.html.twig' %}

{% block title %}Modifier Catégorie{% endblock %}

{% block body %}
<div class="mb-4">
    <h2><i class="bi bi-pencil"></i> Modifier la Catégorie</h2>
</div>
{{ form_start(form) }}
    <div class="mb-3">
        {{ form_row(form.nom) }}
        {{ form_row(form.description) }}
    </div>
    <button class="btn btn-primary"><i class="bi bi-save"></i> Sauvegarder</button>
    <a class="btn btn-secondary" href="{{ path('app_categorie_index') }}"><i class="bi bi-arrow-left"></i> Annuler</a>
{{ form_end(form) }}
{% endblock %}
