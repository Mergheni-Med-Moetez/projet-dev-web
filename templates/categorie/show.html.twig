{% extends 'base.html.twig' %}

{% block title %}Détails Catégorie #{{ categorie.id }}{% endblock %}

{% block body %}
<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card my-4 shadow">
            <div class="card-header bg-dark text-white">
                <h4 class="mb-0">
                    <i class="bi bi-tag"></i>
                    Détails Catégorie
                </h4>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    <label class="form-label">Nom</label>
                    <input type="text" value="{{ categorie.nom }}" class="form-control" readonly>
                </div>
                <div class="mb-3">
                    <label class="form-label">Description</label>
                    <input type="text" value="{{ categorie.description }}" class="form-control" readonly>
                </div>
                <div class="d-flex justify-content-between mt-4">
                    <a class="btn btn-outline-secondary" href="{{ path('app_categorie_index') }}">
                        <i class="bi bi-arrow-left"></i> Retour
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
