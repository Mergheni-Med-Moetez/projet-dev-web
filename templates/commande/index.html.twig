{% extends 'base.html.twig' %}

{% block title %}Gestion des Commandes{% endblock %}

{% block body %}
<div class="mb-4 d-flex justify-content-between align-items-center">
    <h2><i class="bi bi-card-list"></i> Commandes</h2>
    <a href="{{ path('app_commande_new') }}" class="btn btn-primary">
        <i class="bi bi-plus"></i> Nouvelle commande
    </a>
</div>

<table class="table table-hover shadow-sm">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Date</th>
            <th>Client</th>
            <th>Total</th>
            <th>Status</th>
            <th style="width:160px">Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for commande in commandes %}
        <tr>
            <td>{{ commande.id }}</td>
            <td>{{ commande.dateCommande ? commande.dateCommande|date('d/m/Y') : '' }}</td>
            <td>{{ commande.client ? commande.client.nom : 'Inconnu' }}</td>
            <td>{{ commande.total }} DT</td>
            <td>{{ commande.status }}</td>
            <td>
                <a href="{{ path('app_commande_show', {'id': commande.id}) }}" class="btn btn-outline-secondary btn-sm">
                    <i class="bi bi-eye"></i>
                </a>
                <a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="btn btn-outline-success btn-sm">
                    <i class="bi bi-pencil"></i>
                </a>
                {{ include('commande/_delete_form.html.twig') }}
            </td>
        </tr>
    {% else %}
        <tr>
            <td colspan="6" class="text-center">Aucune commande trouv√©e.</td>
        </tr>
    {% endfor %}
    </tbody>
</table>
{% endblock %}
